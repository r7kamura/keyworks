{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": "off",
    "no-undef": "off",
    "quotes": [
      "error",
      "double"
    ],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "semi": [
      "error",
      "always"
    ]
  }
}
